@{
    ViewData["Title"] = "Product Page";
}
<div class="container">

    <table class="table table-dark mt-5">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <th scope="col">Product Name</th>
                <th scope="col">Product Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (ProductDto product in ViewBag.products)
            {


                <tr>
                    <th scope="row">@product.Id</th>
                    <td>@product.CategoryName</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice</td>
                    <td>
                        <a class="btn btn-link" href="/Products/Update/@product.Id">Edit</a>
                        <a class="btn btn-link" href="/Products/DeleteById/@product.Id">Delete</a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
    <a class="btn btn-sm btn-primary text-light" asp-controller="Products" asp-action="Add">Add New Product</a>
</div>