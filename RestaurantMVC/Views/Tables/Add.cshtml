
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/Tables/Save" method="post">



    <div class="mb-3">
        <label class="form-label">Sections</label>
        <select name="SectionId" class="form-control">
            @foreach (Section item in ViewBag.sections)
                {
                    <option value="@item.Id">@item.SectionName</option>
                }
        </select>
    </div>




    <button type="submit" class="btn btn-success  col-md-3">Add</button>
</form>