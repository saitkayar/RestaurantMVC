@{
    ViewData["Title"] = "Employee Page";
}<div class="container">

    @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">+</button>*@
    <table id="employeeForm" class="table table-dark mt-5">
        <thead>
            <tr>
                <th>Id</th>
                <th> Name</th>
                <th>SurName</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in ViewBag.employees)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.SurName</td>
                    <td>
                        <a class="btn btn-link" href="/Employees/Update/@employee.Id">Edit</a>
                        <a class="btn btn-link" href="/Employees/DeleteById/@employee.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
