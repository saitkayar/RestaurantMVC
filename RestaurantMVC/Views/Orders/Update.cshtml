
@{
    ViewData["Title"] = "Order Update";
  
}
<div class="container">
    <form action="/Orders/Save" method="post">
        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <select name="ProductId" class="form-control">
                @foreach (Product product in ViewBag.products)
                {
                    <option value="@product.Id">@product.ProductName</option>

                }

            </select>
            @*<div>      @Html.TextBoxFor(x => x.ProductPrice)</div>*@
        </div>

        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input type="number" name="Quantity" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label"> Discount </label>
            <input type="text" name="Discount" class="form-control" />

        </div>

        @*<div class="mb-3">
                <label class="form-label">ProductName</label>
                <input type="text" name="ProductName" class="form-control">
            </div>*@
        <div class="mb-3">
            <label class="form-label">TableId</label>
            <select name="TableId" class="form-control">
                @foreach (Table table in ViewBag.tables)
                {
                    <option value="@table.Id">@table.Id</option>
                }

            </select>

        </div>

        <input type="hidden" name="Id" value="@ViewBag.order.Id" />
        <button type="submit" class="btn btn-success">Update</button>
    </form>

</div>