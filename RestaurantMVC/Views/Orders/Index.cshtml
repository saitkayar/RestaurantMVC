@{
    ViewData["Title"] = "Order Page";
}

<a class="btn btn-sm btn-primary text-light" asp-controller="Orders" asp-action="Add">+</a>

<table  class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th> Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Table Number</th>


            @*<th>Employee</th>*@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrderDto order in ViewBag.orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                
                <td>@order.ProductPrice</td>
                <td>@order.Quantity</td>
                <td>@order.TableId</td>
                <td>
                    <a class="btn btn-link" href="/Orders/Update/@order.Id">Edit</a>
                    <a class="btn btn-link" href="/Orders/DeleteById/@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

