@{
    ViewData["Title"] = "Categories Update";
}

<form action="/Categories/Save" method="post">


    <div class="mb-3">
        <label class="form-label">Category Name</label>
        <input type="text" name="Name" class="form-control" value="@ViewBag.category.CategoryName">
    </div>
    <input type="hidden" name="Id" value="@ViewBag.category.Id">
    <button type="submit" class="btn btn-success  col-md-3">Update</button>
</form>     