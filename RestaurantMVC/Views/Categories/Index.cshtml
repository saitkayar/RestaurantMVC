@{
    ViewData["Title"] = "Categories Page";
}
<div class="container">
    @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">+</button>*@

    <table id="categoryTable" class="table table-dark mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in ViewBag.categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.CategoryName</td>
                    <td>
                        <a class="btn btn-link" href="/Categories/Save/@category.Id">Edit</a>
                        <a class="btn btn-link" href="/Categories/DeleteById/@category.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-sm btn-primary text-light" asp-controller="Categories" asp-action="Add">Add New Categories</a>
    </div>
